{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./backend/types"
  },
  "include": [
    "backend/**/*.ts",
  ],
  "exclude": ["node_modules", "frontend"]
}